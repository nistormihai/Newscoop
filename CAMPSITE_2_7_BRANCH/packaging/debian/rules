#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)


CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

config.status: configure
	dh_testdir
	# Add here commands to configure the package.
	CFLAGS="$(CFLAGS)" ./configure --apache_user www-data \
								   --apache_group www-data \
								   --apache_conf_path /etc/apache2 \
								   --apache_bin_path /usr/sbin \
								   --campsite_dir /usr/local \
								   --bin_dir /usr/bin \
								   --sbin_dir /usr/sbin \
								   --etc_dir /etc/campsite \
								   --www_dir /var/www/campsite/www \
								   --www_common_dir /var/www/campsite/www-common


build: build-stamp

build-stamp:  config.status
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/campsite.sgml > campsite.1

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp 

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif


	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/campsite.
	$(MAKE) install prefix=$(CURDIR)/debian/campsite/usr

	### move the installation to the packaging directory first (debian/campsite)
	# create directories first
	mkdir -p $(CURDIR)/debian/campsite/usr/bin
	mkdir -p $(CURDIR)/debian/campsite/usr/sbin
	mkdir -p $(CURDIR)/debian/campsite/usr/share
	mkdir -p $(CURDIR)/debian/campsite/etc
	mkdir -p $(CURDIR)/debian/campsite/etc/cron.d
	mkdir -p $(CURDIR)/debian/campsite/var/www

	# move files from the bin directory
	mv -f /usr/bin/campsite-* $(CURDIR)/debian/campsite/usr/bin
	mv -f /usr/bin/campsite_* $(CURDIR)/debian/campsite/usr/bin
	mv -f /usr/bin/cli_script_lib.php $(CURDIR)/debian/campsite/usr/bin
	mv -f /usr/bin/smtp_wrapper $(CURDIR)/debian/campsite/usr/bin

	# move files from the sbin directory
	mv -f /usr/sbin/campsite_* $(CURDIR)/debian/campsite/usr/sbin

	# move files from the share directory
	mv -f /usr/share/campsite $(CURDIR)/debian/campsite/usr/share

	# move files from the etc directory
	mv -f /etc/campsite $(CURDIR)/debian/campsite/etc

	# move files from the cron directory
	mv -f /etc/cron.d/campsite_* $(CURDIR)/debian/campsite/etc/cron.d

	# move files from the www directory
	mv -f /var/www/campsite $(CURDIR)/debian/campsite/var/www

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
